{
  "name": "@elegantui/atoms",
  "version": "0.0.0-beta.1",
  "description": "ElegantUI base components",
  "keywords": [
    "react",
    "hooks",
    "components",
    "design",
    "system"
  ],
  "homepage": "https://github.com/manan30/elegantui/packages/atoms#readme",
  "bugs": {
    "url": "https://github.com/manan30/elegantui/issues",
    "email": "mananjoshi1995@gmail.com"
  },
  "license": "MIT",
  "author": "Manan Joshi <mananjoshi1995@gmail.com> (https://mananjoshi.me)",
  "repository": {
    "type": "git",
    "url": "https://github.com/manan30/elegantui.git",
    "directory": "packages/atoms"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@preact/preset-vite": "^2.3.0",
    "@types/node": "^18.6.3",
    "@types/react": "17.0.48",
    "@vitebook/client": "^0.100.5",
    "@vitebook/core": "^0.100.5",
    "@vitebook/preact": "^0.100.5",
    "@vitebook/theme-default": "^0.100.5",
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0",
    "preact": "^10.5.14",
    "preact-render-to-string": "^5.1.19",
    "react": "17.0.2",
    "svelte": "^3.49.0",
    "tailwind-merge": "^1.5.1",
    "tailwindcss": "^3.1.7",
    "typescript": "^4.4.0",
    "vite": "^3.0.0"
  },
  "peerDependencies": {
    "react": "16.x || 17.x || 18.x"
  },
  "scripts": {
    "build": "pnpm build:packages && pnpm build:tailwind",
    "build:packages": "tsup index.ts",
    "build:tailwind": "pnpm exec tailwindcss -i ./styles/index.css -o ./dist/styles.css",
    "watch:tailwind": "pnpm exec tailwindcss -i ./styles/index.css -o ./dist/styles.css --watch",
    "lint:check": "eslint --max-warnings 0 '**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix '**/*.{ts,tsx}'",
    "format:check": "prettier --check '**/*.{ts,tsx,css}'",
    "format:fix": "prettier --write '**/*.{ts,tsx,css}'",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "vitebook:dev": "vitebook dev",
    "vitebook:build": "vitebook build",
    "vitebook:preview": "vitebook preview"
  }
}
