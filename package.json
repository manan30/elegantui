    "react",
    "hooks",
    "components",
    "design",
    "system"
  ],
  "homepage": "https://github.com/manan30/elegantui#readme",
  "bugs": {
    "url": "https://github.com/manan30/elegantui/issues",
    "email": "mananjoshi1995@gmail.com"
  },
  "license": "MIT",
  "author": "Manan Joshi <mananjoshi1995@gmail.com> (https://mananjoshi.me)",
  "repository": {
    "type": "git",
    "url": "https://github.com/manan30/elegantui.git"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tsup": "^6.2.1",
    "turbo": "latest",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "private": true,
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --check"
    ],
    "*.tsx": [
      "eslint",
      "prettier --check"
    ],
    "*.css": [
      "prettier --check"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "format:check": "turbo run format:check",
    "format:fix": "turbo run format:fix",
    "typecheck": "turbo run typecheck",
    "build": "turbo run build"
  }
}
